#include <stdio.h>

void printArray(int a[], int size){
    for(int i=0; i<size; i++){
        printf("%d ", a[i]);
    }
    printf("\n");
}

int main(){
    int arr[5] = {40, 30, 70, 10, 50};

    printf("버블 정렬 실행 전\n");
    printArray(arr, 5);
    printf("\n");
    
    for(int i=4; i>0; i--){
        for(int j=0; j<i; j++){
            if(arr[j] > arr[j+1]){
                int tmp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = tmp;
            }
        }
        printf("Step %d : ", 5-i);
        printArray(arr, 5);
    }

    printf("\n버블 정렬 실행 후\n");
    printArray(arr, 5);
}

/*
버블 정렬 실행 전
40 30 70 10 50 

Step 1 : 30 40 10 50 70 
Step 2 : 30 10 40 50 70 
Step 3 : 10 30 40 50 70 
Step 4 : 10 30 40 50 70 

버블 정렬 실행 후
10 30 40 50 70 
*/