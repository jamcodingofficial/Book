#include <iostream>
#include <string>

using namespace std;

int main(){
    string color = "black & rose";
    string find_color = "black";
    
    if(color.find(find_color) != string::npos){
        color.replace(color.find(find_color), find_color.length(), "yellow");
    }
    cout << "color : " << color;
    
    return 0;
}
