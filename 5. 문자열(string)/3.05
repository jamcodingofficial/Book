#include <iostream>
#include <string>

using namespace std;

int main(){
    string color = "skyblue";
    
    cout << "color : " << color << "\n";
    cout << "color.length() : " << color.length() << "\n";
    cout << "color.capacity() : " << color.capacity() << "\n\n";
    
    color += " is my favorite color";
    
    cout << "color : " << color << "\n";
    cout << "color.length() : " << color.length() << "\n";
    cout << "color.capacity() : " << color.capacity() << "\n\n";
    
    return 0;
}
